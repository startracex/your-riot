{
  "name": "@your-riot/util",
  "version": "0.0.0",
  "description": "Riot.js util functions",
  "scripts": {
    "build": "rolldown -c rolldown.config.ts",
    "test": "mocha -r jsdom-global/register **/*.spec.js"
  },
  "devDependencies": {
    "jsdom": "26.1.0",
    "jsdom-global": "3.0.2"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/node/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/module/*.js",
      "require": "./dist/node/*.cjs",
      "types": "./dist/types/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "riot"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/startracex/your-riot.git"
  },
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (https://gianlucaguarini.com)",
  "license": "MIT"
}
