{
  "name": "@your-riot/lazy",
  "version": "0.0.0",
  "description": "Lazy components loader for riot",
  "scripts": {
    "build": "rolldown -c rolldown.config.ts",
    "cov": "c8 report --reporter=lcov",
    "cov-html": "c8 report --reporter=html",
    "test": "cross-env NODE_OPTIONS=\"--loader @riotjs/register\" c8 mocha -r jsdom-global/register test/index.js"
  },
  "dependencies": {
    "@your-riot/utils": "workspace:^"
  },
  "peerDependencies": {
    "@your-riot/riot": "workspace:^"
  },
  "devDependencies": {
    "@your-riot/compiler": "workspace:^",
    "@riotjs/register": "^9.0.0",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "jsdom": "22.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "^10.2.0",
    "@your-riot/riot": "^9.0.4"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/node/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist"
  ],
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (https://gianlucaguarini.com)",
  "license": "MIT"
}
