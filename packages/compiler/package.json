{
  "name": "@your-riot/compiler",
  "version": "0.0.0",
  "description": "Riot compiler",
  "scripts": {
    "lint": "eslint --ext js src/ test/ build/ && npx prettier --check ./",
    "cov": "c8 report --reporter=lcov",
    "cov-html": "c8 report --reporter=html",
    "build": "rolldown -c rolldown.config.ts",
    "postest": "npm run cov-html",
    "test-types": "tsc -p test",
    "test-runtime": "playwright test",
    "test-commonjs": "c8 mocha test/**/*.spec.cjs",
    "test": "c8 mocha test/**/*.spec.js && npm run test-types",
    "debug": "mocha --inspect --inspect-brk test/**/*.spec.js"
  },
  "dependencies": {
    "@babel/parser": "^7.27.5",
    "@your-riot/parser": "workspace:^",
    "@your-riot/utils": "workspace:^",
    "css-simple-parser": "^3.0.2",
    "cssesc": "^3.0.0",
    "cumpa": "^2.0.1",
    "curri": "^2.0.3",
    "dom-nodes": "^1.1.3",
    "globals": "^16.2.0",
    "recast": "^0.23.11",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@playwright/test": "^1.53.1",
    "@riotjs/prettier-config": "^1.1.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@your-riot/dom-binding": "workspace:^",
    "acorn": "^8.15.0",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "mocha": "^11.7.0",
    "prettier": "^3.5.3",
    "pug": "^3.0.3",
    "rollup": "^4.44.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.89.2",
    "serve": "^14.2.4",
    "shelljs": "^0.10.0",
    "start-server-and-test": "^2.0.12",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/node/index.cjs",
      "types": "./compiler.d.ts"
    },
    "./essential": {
      "import": "./dist/module/index.js",
      "require": "./dist/node/index.cjs",
      "types": "./compiler.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist",
    "compiler.d.ts"
  ],
  "keywords": [
    "riot"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/startracex/your-riot.git"
  },
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (https://gianlucaguarini.com)",
  "license": "MIT"
}
