{
  "name": "@your-riot/util",
  "version": "2.5.1",
  "description": "Riot.js util functions",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/node/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/module/*.js",
      "require": "./dist/node/*.cjs",
      "types": "./dist/types/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "build": "rolldown -c rolldown.config.ts",
    "test": "mocha -r jsdom-global/register **/*.spec.js"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GianlucaGuarini/@your-riot/util.git"
  },
  "keywords": [
    "Riot.js",
    "shared",
    "Riot util"
  ],
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (https://gianlucaguarini.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GianlucaGuarini/@your-riot/util/issues"
  },
  "homepage": "https://github.com/GianlucaGuarini/@your-riot/util#readme",
  "devDependencies": {
    "jsdom": "26.1.0",
    "jsdom-global": "3.0.2"
  }
}
